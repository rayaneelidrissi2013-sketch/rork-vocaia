{
"compilerOptions": {
  "target": "ES2022",
  "module": "NodeNext",
  "moduleResolution": "NodeNext",
  "lib": ["ES2022"],
  "outDir": "./dist",
  "rootDir": "./backend",
  "resolveJsonModule": true,
  "allowJs": false,
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "declaration": true,
  "declarationMap": true,
  "sourceMap": true
},
"include": [
  "backend/**/*.ts"
],
"exclude": [
  "node_modules",
  "dist"
]
}

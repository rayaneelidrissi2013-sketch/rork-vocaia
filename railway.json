{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "bun"]
        },
        "install": {
          "cmds": ["bun install --no-save"]
        }
      },
      "start": {
        "cmd": "bun run server.ts"
      }
    }
  },
  "deploy": {
    "startCommand": "bun run server.ts",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
